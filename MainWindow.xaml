<Window x:Class="FileViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FileViewer"
        Title="File Viewer" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <local:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>
        <local:BoolToTypeConverter x:Key="BoolToTypeConverter"/>
    </Window.Resources>
    <Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Tab Panel on the left -->
            <StackPanel Grid.Column="0" Background="#F5F5F5">
                <TextBlock Text="Open Items" FontWeight="Bold" Margin="10,10,10,5" FontSize="14"/>
                <ListBox x:Name="TabListBox" 
                         SelectionChanged="TabListBox_SelectionChanged"
                         Background="Transparent"
                         BorderThickness="0"
                         Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding IsActive, Converter={StaticResource BoolToBackgroundConverter}}"
                                    CornerRadius="3"
                                    Margin="2"
                                    Padding="8,5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}" 
                                               FontSize="12"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding FullPath}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Main content area -->
            <Grid Grid.Column="2">
                <ScrollViewer x:Name="ContentScrollViewer">
                    <Grid x:Name="ContentGrid">
                        <!-- File/Text content viewer -->
                        <TextBox x:Name="TextViewer" 
                                 TextWrapping="Wrap" 
                                 IsReadOnly="True" 
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Background="White"
                                 Visibility="Collapsed"/>
                        
                        <!-- Image viewer -->
                        <Image x:Name="ImageViewer" 
                               Stretch="Uniform"
                               Visibility="Collapsed"/>
                        
                        <!-- Directory browser -->
                        <ListView x:Name="DirectoryViewer" 
                                  SelectionChanged="DirectoryViewer_SelectionChanged"
                                  Visibility="Collapsed">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" Width="300">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Name}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Type" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding IsDirectory, Converter={StaticResource BoolToTypeConverter}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Path" Width="400" DisplayMemberBinding="{Binding FullPath}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        
                        <!-- Placeholder text -->
                        <TextBlock x:Name="PlaceholderText" 
                                   Text="Select an item from the left panel"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Foreground="Gray"/>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>